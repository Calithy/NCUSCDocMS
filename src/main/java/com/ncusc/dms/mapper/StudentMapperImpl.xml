<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ncusc.dms.mapper.StudentMapper">

<!-- 左边为pojo属性，右边列为对应的数据库列 -->
<resultMap id="studentMap" type="com.ncusc.dms.pojo.Student">
	<id property="sId" column="sId" />
	<result property="sName" column="sName" />
	<result property="sex" column="sex" />
	<result property="nation" column="nation" />
	<result property="birthDate" column="birthDate" />	
	<result property="major" column="major" />
	<result property="grade" column="grade"/>
	<result property="sClass" column="sClass"/>
	<result property="cardNum" column="cardNum" />
	<result property="fId" column="fId" />
</resultMap>

<select id="getById" parameterType="String" resultMap="studentMap">
	select sId,sName from t_student_info where sId=#{id}
</select>

</mapper>
