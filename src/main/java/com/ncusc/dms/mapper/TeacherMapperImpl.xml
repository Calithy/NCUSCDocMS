<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ncusc.dms.mapper.TeacherMapper">

<resultMap id="teacherMap" type="com.ncusc.dms.pojo.Teacher">
	<id property="id" column="tId" />
	<result property="name" column="tName" />
	<result property="sex" column="sex" />
	<result property="nation" column="nation" />
	<result property="birthDate" column="birthDate" />
	<result property="cardNum" column="cardNum" />
	<result property="position" column="position" />
	<result property="dId" column="dId" />
</resultMap>

<select id="getById" parameterType="String" resultMap="teacherMap">
	select tId,tName from t_teacher_info where tId=#{id}
</select>

</mapper>